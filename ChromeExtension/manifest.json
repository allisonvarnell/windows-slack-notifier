{
    "name": "Slack - Windows tray notifier companion",
    "version": "3.0",
    "manifest_version": 2,
    "description": "Passes Slack notifications to a Windows tray application (must be installed seperately).",
    "author": "Vitaly Belman",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/lib/q.js",
            "src/lib/lodash.min.js",
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "browser action demo"
    },
    "permissions": [
        "tabs",
        "notifications",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.slack.com/*"
            ],
            "js": [
                "src/lib/q.js",
                "src/lib/lodash.min.js",
                "src/inject/inject.js"
            ],
			"css": [
                "src/inject/windows-tray.css"
			]
        }
    ]
}